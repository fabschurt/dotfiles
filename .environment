export PATH="~/.config/composer/vendor/bin:~/.npm-packages/bin:${PATH}"
export MANPATH="~/.npm-packages/share/man:$(manpath)"

export HISTSIZE=10000
export HISTFILESIZE=10000

export EDITOR=vim
export VISUAL=vim

readonly LESS_OPTIONS='--hilite-search --jump-target=.5 --ignore-case --quit-if-one-screen --RAW-CONTROL-CHARS --tabs=2'
export LESS="$LESS_OPTIONS"
export BAT_PAGER="less ${LESS_OPTIONS}"

export LANG=en_US.UTF-8
export LANGUAGE=en_US:en
export LC_ADDRESS=fr_FR.UTF-8
export LC_MONETARY=fr_FR.UTF-8
export LC_MEASUREMENT=fr_FR.UTF-8
export LC_NUMERIC=fr_FR.UTF-8
export LC_PAPER=fr_FR.UTF-8
export LC_TELEPHONE=fr_FR.UTF-8
export LC_TIME=fr_FR.UTF-8
